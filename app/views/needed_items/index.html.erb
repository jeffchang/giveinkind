<div class="row">
  <% needed_items_count = @needed_items.length %>
  <% needed_items_per_row = needed_items_count / 3 %>

  <% if @needed_items.length > 0 %>
    <div class="small-4 columns">
      <% @needed_items[0...needed_items_per_row].each do |needed_item| %>
        <h4><%= link_to needed_item.name, needed_item_path(needed_item) %></h4>
        <p><i>Written by <%= needed_item.user.name %></i></p>
      <% end %>
    </div>

    <div class="small-4 columns">
    <% @needed_items[needed_items_per_row...needed_items_per_row*2].each do |needed_item| %>
        <h4><%= link_to needed_item.name, needed_item_path(needed_item) %></h4>
        <p><i>Started by <%= needed_item.user.name %></i></p>
    <% end %>
    </div>

    <div class="small-4 columns">
    <% @needed_items[needed_items_per_row*2...needed_items_per_row*3].each do |needed_item| %>
        <h4><%= link_to needed_item.name, needed_item_path(needed_item) %></h4>
        <p><i>Started by <%= needed_item.user.name %></i></p>
    <% end %>
    </div>

  <% else %>
    <h4>There are no needed items to show.</h4>
  <% end %>

</div>