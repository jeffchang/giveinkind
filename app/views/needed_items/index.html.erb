<div class="wrapper wrapper-darker">
  <div class="row">
    <div class="welcome-text">
      <h1>Needed Items</h1>
      <p>Turpis pellentesque? Integer dignissim nascetur, scelerisque dignissim pulvinar urna tincidunt etiam non pid urna urna rhoncus.</p>
    </div>
  </div>
</div>


<div class="row">
  <form class="search-form">
    <input class="search-input" name="search" type="search" autofocus
           value='<%= "#{params[:search]}" %>' placeholder="What would you like to give?">
  </form>
  <br>
  <% if @needed_items.length > 0 %>
    <div id="infinite-scroll">
      <% @needed_items.each do |needed_item| %>
        <div class="infinite small-6 columns">
          <div class="item-container row">
            <div class="small-4 columns">
              <% if needed_item.image_url %>
                <%= image_tag needed_item.image_url, class: "mini-image" %>
              <% elsif needed_item.subcategory %>
                <%= image_tag needed_item.subcategory.category.icon, class: "mini-image" %>
              <% end %>
            </div>
            <div class="small-4 columns left">
              <h4><%= link_to needed_item.name, needed_item_path(needed_item), class: "item-link" %></h4>
              <% if needed_item.user && needed_item.user.name != "" %>
                <p><i>Written by <%= needed_item.user.name %></i></p>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>

    <nav id="page_nav">
      <a href="page2.html"></a>
    </nav>

  <% else %>
    <h4>There are no needed items to show.</h4>
  <% end %>

</div>