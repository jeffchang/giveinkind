<div class="row">

  <% if @donor_items.length > 0 %>
    <div class="small-4 columns">
      <% @donor_items.each do |donor_item| %>
        <h4><%= link_to donor_item.name, donor_item_path(donor_item) %></h4>
        <p><i>Written by <%= donor_item.user.name %></i></p>
      <% end %>
    </div>

  <% else %>
    <h4>There are no donations to show.</h4>
  <% end %>

</div>