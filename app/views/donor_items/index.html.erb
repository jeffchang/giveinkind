<div class="row">

  <% if @donor_items.length > 0 %>
    <div class="small-6 columns">
      <% @donor_items.each do |donor_item| %>
        <div class="item-container">
          <div class="small-2 columns">
            <% if donor_item.image_url %>
              <%= image_tag donor_item.image_url, class: "mini-images" %>
            <% elsif donor_item.subcategory %>
              <%= image_tag donor_item.subcategory.category.icon, class: "mini-images" %>
            <% end %>
          </div>
          <div class="small-4 columns">
            <h4><%= link_to donor_item.name, donor_item_path(donor_item) %></h4>
            <p><i>Written by <%= donor_item.user.name %></i></p>
          </div>
        </div>
      <% end %>
    </div>

  <% else %>
    <h4>There are no donations to show.</h4>
  <% end %>

</div>