<div class="row">

  <% if @needs.length > 0 %>
    <div class="small-4 columns">
      <% @needs.each do |need| %>
        <div class="item-container">
          <%= link_to image_tag(need.image_url, class: "story-image"), need_path(need) %>
          <h4><%= link_to need.name, need_path(need), class: "item-link" %></h4>
          <p><i>Written by <%= need.user.name %></i></p>
        </div>
      <% end %>
    </div>

  <% else %>
    <h4>There are no current needs to show.</h4>
  <% end %>
  
</div>