<div class="wrapper wrapper-darker">
  <div class="row">
    <div class="welcome-text">
      <h1><span id="page_heading" data-mercury="full"><%= raw @page.heading %></span></h1>
      <span id="page_caption" data-mercury="full"><%= raw @page.caption %></span>
    </div>
  </div>
</div>

<div class="row">

	<div class="large-8 columns">

    <h2><span id="page_subheading_1" data-mercury="full"><%= raw @page.subheading_1 %></span></h2>

    <span id="page_opening_1" data-mercury="full"><%= raw @page.opening_1 %></span>

		<form>

			<div class="row">
      			<div class="large-12 columns">
        			<label>Contact Name</label>
        			<input type="text" placeholder="Contact Name">
      			</div>
    		</div>

			<div class="row">
      			<div class="large-12 columns">
        			<label>Contact Number</label>
        			<input type="text" placeholder="Contact Number">
      			</div>
    		</div>

			<div class="row">
      			<div class="large-12 columns">
        			<label>Email Address</label>
        			<input type="email" placeholder="youremail@youremail.com">
      			</div>
    		</div>

			<div class="row">
      			<div class="large-12 columns">
        			<label>Your Message</label>
        			<textarea placeholder="Message" rows="10"></textarea>
      			</div>
    		</div>

    		<input class="button large-6" type="submit" value="Send Message">

    	</form>

	</div>

	<div class="sidebar large-4 columns">

		<div class="sidebar-feature">
			<h2>Address</h2>
			<ul>
				<li>Norton Park</li>
        <li>57 Albion Road</li>
        <li>Edinburgh</li>
        <li>EH7 5QY</li>
			</ul>
		</div>

    <div class="sidebar-feature">
      <h2>Contact Info</h2>
      <ul>
        <li>Tel: 0131 123 4567</li>
        <li>Email: info@cyrenians.org.uk</li>
      </ul>
    </div>   

	</div>

